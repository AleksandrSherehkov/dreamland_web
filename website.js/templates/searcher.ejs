                                        <form>
                                            <div class="form-row">
                                                <div class="form-group col-md-2 col-sm-2">
                                                    <label for="levelMin">Уровень с</label>
                                                    <input type="text" class="form-control" id="levelMin" placeholder=""/>
                                                </div>
